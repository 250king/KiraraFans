<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <queries>
        <package android:name="com.aniplex.kirarafantasia"/>
        <package android:name="com.vmos.pro"/>
    </queries>
    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:requestLegacyExternalStorage="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.KiraraTools"
            tools:targetApi="31">
        <meta-data
                android:name="com.gd1000m.cloud.fc.endpoint"
                android:value="https://kirara.fc.gcloudapi.com/"/>
        <meta-data
                android:name="com.gd1000m.author"
                android:value="250king"/>
        <activity
                android:name=".activity.InfoActivity"
                android:exported="false"
                android:theme="@style/Theme.KiraraTools"/>
        <activity
                android:name=".activity.AboutActivity"
                android:exported="false"
                android:theme="@style/Theme.KiraraTools"/>
        <activity
                android:name=".activity.LicenseActivity"
                android:exported="false"
                android:theme="@style/Theme.KiraraTools"/>
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KiraraTools"/>
        <activity
                android:name=".activity.MainActivity"
                android:exported="true"
                android:theme="@style/Theme.KiraraTools">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>