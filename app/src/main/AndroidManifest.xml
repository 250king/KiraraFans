<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <queries>
        <package android:name="com.aniplex.kirarafantasia" />
        <package android:name="com.vmos.pro" />
    </queries>
    <application
        android:name=".Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KiraraTools"
        tools:targetApi="31">
        <meta-data
            android:name="com.gcloud.author"
            android:value="250king" />
        <meta-data
            android:name="com.gcloud.oid"
            android:value="85b98317-c1ff-4b4a-9720-55edc3f676e5" />
        <meta-data
            android:name="com.gcloud.gclient.version"
            android:value="2024.9" />

        <activity
            android:name=".ui.activity.InfoActivity"
            android:exported="false"
            android:theme="@style/Theme.KiraraTools" />
        <activity
            android:name=".ui.activity.AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.KiraraTools" />
        <activity
            android:name=".ui.activity.LicenseActivity"
            android:exported="false"
            android:theme="@style/Theme.KiraraTools" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KiraraTools" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KiraraTools">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.ConnectorVpnService"
            android:exported="true"
            android:permission="android.permission.BIND_VPN_SERVICE">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>
    </application>

</manifest>